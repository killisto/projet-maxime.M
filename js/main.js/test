function calculate(operator) {
    let num1 = parseInt(document.getElementById("num1").value);
    let num2 = parseInt(document.getElementById("num2").value);
    let result = 0;

    if (isNaN(num1) || isNaN(num2)) {
        document.getElementById("result").innerText = "Veuillez entrer des nombres valides.";
        return;
    }

    switch (operator) {
        case '+':
            result = num1 + num2;
            break;
        case '-':
            result = num1 - num2;
            break;
        case '*':
            result = num1 * num2;
            break;
        default:
            result = "Opération invalide";
    }

    // Display the result inside the <p id="result">
    document.getElementById("result").innerText = "Résultat : " + result;
}
